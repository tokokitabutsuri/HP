name: counter_clear

on:
  schedule:
    - cron:  '30 15 * * *'
  workflow_dispatch:
jobs:
  build:
    name: add
    runs-on: ubuntu-latest
    timeout-minutes: 180 # タイムアウト設定しないと永遠に処理走って大変になる場合がある
    steps:
    - name: Checkout
      uses: actions/checkout@v3
    - name: Setup Node
      uses: actions/setup-node@v3
      with:
        node-version: "16"
        cache: npm
    - name: Install Dependencies
      run: npm ci
    - name: Create Sitemap
      run: npm run add
